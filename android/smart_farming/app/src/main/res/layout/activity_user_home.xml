<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/cropgreen"
    tools:context=".UserHome">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"
        android:text="user Home" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/newsview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textColorHint="#000"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:hint="View News" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cropview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColorHint="#000"
        android:background="#fff"
        android:hint="View Crops" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/orderview"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textColorHint="#000"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:hint="View Cart" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ordercropview"
        android:layout_width="match_parent"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textColorHint="#000"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:hint="My Order" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/compbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:hint="Send Complaint"
        android:textColor="#000000"
        android:textColorHint="#000"
        android:textStyle="bold" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/lg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:hint="Logout"
        android:textColor="#000000"
        android:textColorHint="#000"
        android:textStyle="bold" />


</LinearLayout>